<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.finalproject.fragment.LeftFragment">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="3"
        android:background="@android:color/holo_blue_light"
        >
        <ImageView
            android:id="@+id/img_slot_1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_column="0"

            android:scaleType="centerCrop"
 />
        <ImageView
            android:id="@+id/img_slot_2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="1"
            android:layout_column="0"

            android:scaleType="centerCrop"

  />
        <ImageView
            android:id="@+id/img_slot_3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="2"
            android:layout_column="0"

            android:scaleType="centerCrop"
 />
        <ImageView
            android:id="@+id/img_slot_4"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_column="1"

            android:scaleType="centerCrop"
/>
        <ImageView
            android:id="@+id/img_slot_5"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="1"
            android:layout_column="1"

            android:scaleType="centerCrop"
 />
        <ImageView
            android:id="@+id/img_slot_6"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="2"
            android:layout_column="1"

            android:scaleType="centerCrop"
 />
    </GridLayout>


</FrameLayout>
